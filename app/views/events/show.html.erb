<div class="nav-icons">
  <%= link_to events_path do %>
  <%= image_tag("icons/arrow_left.svg", :alt => "arrow left", class: "arrow_left_icon") %>
  <% end %>

  <%= link_to '/' do %>
  <%= image_tag("icons/close.svg", :alt => "cancel", class: "cancel_icon") %>
  <% end %>
</div>

<div id="event-show">
  <%= cl_image_tag @event.photo %>
  <h2><%= @event.name %></h2>
  <p><%= @event.description %></p>
  <h4><%= @event.location %></h4>
  <p><%= @event.date.strftime("%d/%m/%Y at: %I:%M%p") %></p>

</div>
<!-- <h1 id="btn-form"> -->
  <% if @event.attending?(current_user)%>
  <div class="unattend_button">
      <%= link_to "Unattend", attendance_path, method: :delete, data: { confirm: 'Are you sure?'}, class: "next_text" %>
      </div>
  <% else %>
  <%= simple_form_for([@event, @attendance]) do |f|%>
    <%= f.submit class: "next_text unattend_button" %>
  <% end %>
<% end %>
