  <div class="product-card">
    <div class="product-tumb">
     <p><%= cl_image_tag report.photo %></p>
   </div>

   <div class="product-details">
    <%= case report.category
      when "Road Block"
        image_tag("icons/road_block.png", class: "icon_image_popup")
      when "Trash"
        image_tag('icons/trash_can.png', class: "icon_image_popup")
      when "Traffic Light"
        image_tag('icons/traffic_light_2.png', class: "icon_image_popup")
      when "Sewage"
        image_tag('icons/sewer.png', class: "icon_image_popup")
      when "Water Leak"
        image_tag('icons/tear_drop.png', class: "icon_image_popup")
      when "Pothole"
        image_tag('icons/pothole.svg', class: "icon_image_popup")
      when "other"
        image_tag('icons/other.png', class: "icon_image_popup")
      when "Street Light"
        image_tag('icons/broken_light.png', class: "icon_image_popup")
      when "Exterminate"
        image_tag('icons/rat.png', class: "icon_image_popup")
      end
    %>

   <div class="product-details" data-report-id="<%= report.id %>">
    <p class="card-address"><span class="text-topic"></span><%= report.location %></p>
    <h3 class="card-category"><span class="product-category"><%= report.category %></span></h3>
    <p class="card-description"><span class="text-topic">Description: </span><%= report.description %></p>
    <div class="product-bottom-details">
      <div class="product-upvote" data-report-id="<%= report.id %>" >
        Upvotes:
        <span data-report-id="<%= report.id %>"><%= report.votes.count %></span>
      </div>
      <div class="upvotemachine"><%= link_to vote_up_report_path(report), :method => :post, remote: true do %></div>
        <i class="fa fa-thumbs-up fa-3x like can-vote" aria-hidden="true"></i>
        <% end %>
      <div class="product-links">
      </div>
    </div>
  </div>
</div>
